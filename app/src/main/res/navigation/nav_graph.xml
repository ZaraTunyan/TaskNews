<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@+id/fragment_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.nytimes.task.features.home.HomeFragment"
        android:label="@string/home_fragment_tag"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_news_details"
            app:destination="@id/fragment_news_details"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragment_news_details"
        android:name="com.nytimes.task.features.details.NewsDetailsFragment"
        android:label="@string/news_details_fragment_tag"
        tools:layout="@layout/fragment_news_details">

        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
</navigation>